<%= render :partial=>"shared/navigation"%>
<h1 id="modifier" class="titre">Modification du site</h1>

<% form_for(@site) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nom %><br />
    <%= f.text_field :nom %>
  </p>
  <p>
    <%= f.label "Responsable" %><br />
    <%= f.select :utilisateur_id,@responsables %>
  </p>
  <p>
    <%= f.submit 'Modifier' %>
  </p>
<% end %>

<%= link_to 'Voir', @site %> |
<%= link_to 'Retour', sites_path %>
